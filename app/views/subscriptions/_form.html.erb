<%=render(partial: "application/errors", locals: {errors: @subscription.errors.full_messages})%>
     
     <%= form_with(model: subscription) do |f| %>
      <%= f.label "Enter your monthly price:" %><br>
      <%= f.number_field :monthly_price, step: 0.01%> <br>
      <%= f.label "Total paying users:" %> <br>
      <%= f.select :shared_user_accounts, (1..10) %> <br>
      <%= f.label "Enter any subscription notes:" %> <br>
      <%= f.text_area :subscription_notes, cols: 50, rows: 10%><br>
      <%= f.hidden_field :streaming_service_id, :value => params[:streaming_service_id]%>
      <%= f.submit "Submit" %>
  <% end %>